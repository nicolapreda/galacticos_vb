<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Squadra | Galacticos Vele Blu</title>
    <link rel="stylesheet" href="/assets/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Inter:wght@400;700;900&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #001E45;
        }

        h1,
        h2,
        h3 {
            font-family: 'Anton', sans-serif;
            text-transform: uppercase;
        }

        .player-card {
            background: linear-gradient(135deg, #0047AB 0%, #001E45 100%);
        }

        .player-number {
            font-family: 'Anton', sans-serif;
            -webkit-text-stroke: 1px rgba(255, 255, 255, 0.3);
            color: transparent;
        }
    </style>
</head>

<body class="text-white">
    <%- include('partials/navbar') %>

        <!-- Page Header -->
        <header class="bg-galacticos-dark text-white pt-32 pb-12 px-6">
            <div class="max-w-7xl mx-auto text-center">
                <h1 class="text-6xl md:text-9xl font-black mb-4">La Squadra</h1>
                <p class="text-xl text-gray-300 uppercase tracking-widest">Stagione 2025/2026</p>
            </div>
        </header>

        <!-- Roster Grid -->
        <main class="max-w-7xl mx-auto px-6 py-12 pb-32">

            <!-- Goalkeepers -->
            <h2 class="text-4xl font-black mb-8 border-b border-galacticos-accent inline-block">Portieri</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8 mb-16">
                <!-- Player 1 -->
                <div class="player-card rounded-xl overflow-hidden shadow-2xl group cursor-pointer relative">
                    <div class="aspect-[3/4] overflow-hidden bg-gray-800">
                        <img src="https://placehold.co/600x800/png?text=GK" alt="Portiere"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                    </div>
                    <div
                        class="absolute top-2 right-4 text-6xl font-black player-number group-hover:text-white transition-colors duration-300">
                        1
                    </div>
                    <div class="p-6 relative z-10 bg-gradient-to-t from-black to-transparent -mt-20 pt-20">
                        <h3 class="text-2xl font-black">Mario Rossi</h3>
                        <p class="text-galacticos-accent font-bold uppercase text-xs tracking-wider">Portiere</p>
                    </div>
                </div>
            </div>

            <!-- Defenders -->
            <h2 class="text-4xl font-black mb-8 border-b border-galacticos-accent inline-block">Difensori</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8 mb-16">
                <!-- Player 2 -->
                <div class="player-card rounded-xl overflow-hidden shadow-2xl group cursor-pointer relative">
                    <div class="aspect-[3/4] overflow-hidden bg-gray-800">
                        <img src="https://placehold.co/600x800/png?text=DEF" alt="Difensore"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                    </div>
                    <div
                        class="absolute top-2 right-4 text-6xl font-black player-number group-hover:text-white transition-colors duration-300">
                        3
                    </div>
                    <div class="p-6 relative z-10 bg-gradient-to-t from-black to-transparent -mt-20 pt-20">
                        <h3 class="text-2xl font-black">Luca Bianchi</h3>
                        <p class="text-galacticos-accent font-bold uppercase text-xs tracking-wider">Difensore Centrale
                        </p>
                    </div>
                </div>
                <!-- Player 3 -->
                <div class="player-card rounded-xl overflow-hidden shadow-2xl group cursor-pointer relative">
                    <div class="aspect-[3/4] overflow-hidden bg-gray-800">
                        <img src="https://placehold.co/600x800/png?text=DEF" alt="Difensore"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                    </div>
                    <div
                        class="absolute top-2 right-4 text-6xl font-black player-number group-hover:text-white transition-colors duration-300">
                        5
                    </div>
                    <div class="p-6 relative z-10 bg-gradient-to-t from-black to-transparent -mt-20 pt-20">
                        <h3 class="text-2xl font-black">Marco Verdi</h3>
                        <p class="text-galacticos-accent font-bold uppercase text-xs tracking-wider">Terzino Sinistro
                        </p>
                    </div>
                </div>
            </div>

            <!-- Midfielders -->
            <h2 class="text-4xl font-black mb-8 border-b border-galacticos-accent inline-block">Centrocampisti</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8 mb-16">
                <!-- Player 4 -->
                <div class="player-card rounded-xl overflow-hidden shadow-2xl group cursor-pointer relative">
                    <div class="aspect-[3/4] overflow-hidden bg-gray-800">
                        <img src="https://placehold.co/600x800/png?text=MID" alt="Centrocampista"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                    </div>
                    <div
                        class="absolute top-2 right-4 text-6xl font-black player-number group-hover:text-white transition-colors duration-300">
                        8
                    </div>
                    <div class="p-6 relative z-10 bg-gradient-to-t from-black to-transparent -mt-20 pt-20">
                        <h3 class="text-2xl font-black">Alessandro Neri</h3>
                        <p class="text-galacticos-accent font-bold uppercase text-xs tracking-wider">Regista</p>
                    </div>
                </div>
                <!-- Player 5 -->
                <div class="player-card rounded-xl overflow-hidden shadow-2xl group cursor-pointer relative">
                    <div class="aspect-[3/4] overflow-hidden bg-gray-800">
                        <img src="https://placehold.co/600x800/png?text=MID" alt="Centrocampista"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                    </div>
                    <div
                        class="absolute top-2 right-4 text-6xl font-black player-number group-hover:text-white transition-colors duration-300">
                        10
                    </div>
                    <div class="p-6 relative z-10 bg-gradient-to-t from-black to-transparent -mt-20 pt-20">
                        <h3 class="text-2xl font-black">Francesco Totti</h3>
                        <p class="text-galacticos-accent font-bold uppercase text-xs tracking-wider">Trequartista</p>
                    </div>
                </div>
            </div>

            <!-- Forwards -->
            <h2 class="text-4xl font-black mb-8 border-b border-galacticos-accent inline-block">Attaccanti</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8 mb-16">
                <!-- Player 6 -->
                <div class="player-card rounded-xl overflow-hidden shadow-2xl group cursor-pointer relative">
                    <div class="aspect-[3/4] overflow-hidden bg-gray-800">
                        <img src="https://placehold.co/600x800/png?text=FWD" alt="Attaccante"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                    </div>
                    <div
                        class="absolute top-2 right-4 text-6xl font-black player-number group-hover:text-white transition-colors duration-300">
                        9
                    </div>
                    <div class="p-6 relative z-10 bg-gradient-to-t from-black to-transparent -mt-20 pt-20">
                        <h3 class="text-2xl font-black">Giovanni bomber</h3>
                        <p class="text-galacticos-accent font-bold uppercase text-xs tracking-wider">Punta Centrale</p>
                    </div>
                </div>
            </div>

        </main>

        <%- include('partials/footer') %>
</body>

</html>