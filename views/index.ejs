<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Galacticos Vele Blu | Official Website</title>
    <meta name="description" content="Sito ufficiale dei Galacticos Vele Blu. News, partite, shop e community." />
    <!-- Tailwind CSS Output -->
    <link rel="stylesheet" href="/assets/style.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Inter:wght@400;700;900&display=swap"
        rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        h1,
        h2,
        h3,
        .font-display {
            font-family: 'Anton', sans-serif;
            text-transform: uppercase;
        }

        /* Grunge texture overlay */
        .grunge-overlay {
            background-image: url('https://www.transparenttextures.com/patterns/concrete-wall.png');
            opacity: 0.1;
            pointer-events: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }
    </style>
</head>

<body class="text-white overflow-x-hidden">
    <!-- Navigation -->
    <%- include('partials/navbar') %>

        <!-- PADDING FOR FIXED NAVBAR -->
        <div class="h-[140px] md:h-[180px] bg-white"></div>

        <!-- MAIN WRAPPER (Boxed Layout for White Borders) -->
        <main class="max-w-[1800px] mx-auto bg-white relative px-4 md:px-12">

            <!-- MATCH BANNER -->
            <section class="relative z-20 pt-8 pb-4 text-center">
                <div class="max-w-5xl mx-auto bg-galacticos-dark text-white shadow-xl relative py-6 px-4 md:px-12 flex flex-col md:flex-row items-center justify-between gap-6"
                    style="background-image: url('/assets/pattern-dots.svg');">
                    <!-- Left: Timer -->
                    <div class="text-center md:text-left flex flex-col items-center md:items-start">
                        <span class="text-galacticos-accent font-anton text-sm tracking-[0.2em] uppercase mb-2">Prossima
                            Partita</span>
                        <div class="flex gap-3 font-anton text-2xl md:text-3xl">
                            <div>04<span class="text-[10px] block font-sans text-gray-400">GIORNI</span></div>
                            <div>:</div>
                            <div>12<span class="text-[10px] block font-sans text-gray-400">ORE</span></div>
                            <div>:</div>
                            <div>30<span class="text-[10px] block font-sans text-gray-400">MIN</span></div>
                        </div>
                    </div>

                    <!-- Center: Matchup -->
                    <div class="flex flex-col items-center">
                        <div class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Campionato CSI</div>
                        <div class="flex items-center gap-4 text-3xl md:text-5xl font-anton">
                            <span>GVB</span>
                            <span class="text-galacticos-accent">-</span>
                            <span>OPP</span>
                        </div>
                        <div class="mt-2 text-xs font-bold bg-white text-galacticos-dark px-2 py-1 uppercase">07 Feb •
                            21:00</div>
                    </div>

                    <!-- Right: Action -->
                    <div>
                        <a href="#" class="btn-accent text-sm px-6 py-2 shadow-lg shadow-yellow-500/20">BIGLIETTI</a>
                    </div>
                </div>
            </section>

            <!-- HERO IMAGE -->
            <section class="relative w-full mb-16">
                <div class="aspect-[16/9] md:aspect-[21/9] w-full overflow-hidden shadow-sm">
                    <img src="/assets/galacticos3.webp" alt="Galacticos Team" class="w-full h-full object-cover">
                </div>
            </section>

            <!-- CONTENT SECTIONS (News, Shop, etc.) -->
            <!-- Just referencing the start of the next section -->

            <!-- LATEST NEWS -->
            <section class="py-12 relative border-t border-gray-100">
                <div class="max-w-7xl mx-auto">
                    <div class="flex justify-between items-end mb-12 pb-4">
                        <h2 class="text-5xl md:text-7xl font-black text-galacticos-dark">LATEST <span
                                class="bg-galacticos-accent px-2 text-galacticos-dark">NEWS</span></h2>
                        <a href="/news"
                            class="hidden md:block bg-galacticos-accent text-galacticos-dark px-4 py-2 font-bold hover:bg-galacticos-dark hover:text-white transition-colors uppercase tracking-widest text-sm">Tutte
                            le news &rarr;</a>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        <% if(typeof news !=='undefined' && news.length> 0) { %>
                            <% news.forEach(function(item) { %>
                                <article class="group cursor-pointer">
                                    <div
                                        class="relative aspect-[4/3] overflow-hidden bg-gray-100 mb-4 group-hover:opacity-90 transition-all">
                                        <img src="<%= item.image || '/assets/news-placeholder.jpg' %>"
                                            alt="<%= item.title %>"
                                            class="w-full h-full object-cover transform group-hover:scale-105 transition duration-700">
                                        <div
                                            class="absolute top-0 left-0 bg-galacticos-accent text-galacticos-dark font-bold text-xs px-3 py-1 uppercase">
                                            News
                                        </div>
                                    </div>
                                    <div
                                        class="bg-galacticos-dark text-galacticos-accent inline-block px-1 text-xs font-bold mb-2 uppercase tracking-wider">
                                        <%= new Date(item.date).toLocaleDateString() %>
                                    </div>
                                    <h3
                                        class="text-2xl font-black leading-tight text-galacticos-dark group-hover:underline decoration-galacticos-accent underline-offset-4 transition-colors font-anton uppercase">
                                        <a href="/news/<%= item.id %>">
                                            <%= item.title %>
                                        </a>
                                    </h3>
                                </article>
                                <% }); %>
                                    <% } else { %>
                                        <!-- Fallback placeholder content -->
                                        <article class="group cursor-pointer">
                                            <div
                                                class="relative aspect-[4/3] overflow-hidden bg-gray-100 mb-4 group-hover:opacity-90 transition-all">
                                                <img src="/assets/news-placeholder.jpg" alt="News Placeholder"
                                                    class="w-full h-full object-cover transform group-hover:scale-105 transition duration-700">
                                            </div>
                                            <div
                                                class="bg-galacticos-dark text-galacticos-accent inline-block px-1 text-xs font-bold mb-2 uppercase tracking-wider">
                                                Oggi
                                            </div>
                                            <h3
                                                class="text-4xl font-black leading-none text-galacticos-dark uppercase font-anton">
                                                Benvenuti nel nuovo sito ufficiale
                                            </h3>
                                            <p
                                                class="font-bold bg-galacticos-accent text-galacticos-dark inline-block px-1">
                                                LEGGI DI PIÙ</p>
                                        </article>
                                        <% } %>
                    </div>

                    <div class="mt-8 text-center md:hidden">
                        <a href="/news" class="btn-primary w-full block text-center">Tutte le news</a>
                    </div>
                </div>
            </section>

            <!-- SHOP TEASER -->
            <section class="py-24 bg-white text-galacticos-dark relative overflow-hidden">
                <!-- Diagonal split background -->
                <div
                    class="absolute top-0 right-0 w-2/3 h-full bg-galacticos-gray transform skew-x-12 translate-x-32 z-0 hidden lg:block">
                </div>

                <div class="max-w-7xl mx-auto px-6 relative z-10">
                    <div class="flex flex-col lg:flex-row items-center gap-16">
                        <!-- Text Content -->
                        <div class="w-full lg:w-1/2">
                            <h2 class="text-5xl md:text-8xl font-black mb-6 leading-none">
                                WEAR THE<br><span class="text-galacticos-blue outline-text">COLORS.</span>
                            </h2>
                            <p class="text-xl font-medium text-gray-600 mb-8 max-w-md">
                                Scopri la nuova collezione ufficiale 2026. Maglie gara, training kit e merchandising
                                ufficiale dei Galacticos.
                            </p>
                            <a href="/shop" class="btn-primary inline-flex items-center gap-2">
                                Acquista Ora
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                </svg>
                            </a>
                        </div>

                        <!-- Image/Product Display -->
                        <div class="w-full lg:w-1/2 relative">
                            <div class="relative z-10 transform hover:scale-105 transition duration-500">
                                <img src="/assets/shop-teaser.png" alt="Shop Teaser" class="w-full drop-shadow-2xl">
                            </div>
                            <!-- Decorative elements -->
                            <div
                                class="absolute -top-10 -right-10 w-40 h-40 bg-galacticos-accent rounded-full blur-3xl opacity-50 z-0">
                            </div>
                            <div
                                class="absolute -bottom-10 -left-10 w-60 h-60 bg-galacticos-blue rounded-full blur-3xl opacity-20 z-0">
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- COMMUNITY / SOCIAL -->
            <section class="py-20 bg-galacticos-blue relative overflow-hidden">
                <div class="absolute inset-0 opacity-10" style="background-image: url('/assets/pattern-dots.svg');">
                </div>
                <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
                    <h2 class="text-4xl md:text-6xl font-black text-white mb-6 uppercase">Entra nella community</h2>
                    <p class="text-white/80 text-xl mb-10">
                        Seguici sui social e unisciti ai cori della Caravella Arena. #VamosGalacticos
                    </p>
                    <div class="flex justify-center gap-4">
                        <a href="#"
                            class="bg-white text-galacticos-blue w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold hover:scale-110 transition shadow-lg">IG</a>
                        <a href="#"
                            class="bg-white text-galacticos-blue w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold hover:scale-110 transition shadow-lg">FB</a>
                        <a href="#"
                            class="bg-white text-galacticos-blue w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold hover:scale-110 transition shadow-lg">YT</a>
                    </div>
                </div>
            </section>

        </main>

        <!-- Footer -->
        <%- include('partials/footer') %>

</body>

</html>